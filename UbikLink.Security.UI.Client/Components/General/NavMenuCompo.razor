<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <FluentNavLink Href="settings" Icon="@(new Icons.Regular.Size20.Settings())" IconColor="Color.Accent">Settings</FluentNavLink>
            @if(IsSubscriptionOwner)
            {
                <FluentNavLink Href="subscription" Icon="@(new Icons.Regular.Size20.Briefcase())" IconColor="Color.Accent">Subscription</FluentNavLink>
            }
            @if(IsTenantManager || IsSubscriptionOwner)
            {
                <FluentNavLink Href="tenant" Icon="@(new Icons.Regular.Size20.Building())" IconColor="Color.Accent">Tenant</FluentNavLink>
            }
            @if (IsMegaAdmin)
            {
                <FluentNavLink Href="authorizations" Icon="@(new Icons.Regular.Size20.Key())" IconColor="Color.Accent">Authorizations</FluentNavLink>
                <FluentNavLink Href="roles" Icon="@(new Icons.Regular.Size20.PersonWrench())" IconColor="Color.Accent">Roles</FluentNavLink>
            }
        </FluentNavMenu>
    </nav>
</div>
